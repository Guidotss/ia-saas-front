---
import Layout from "../../layouts/Layout.astro";
import ServicesLayout from "../../layouts/ServicesLayout.astro";

export async function getStaticPaths() {
  const pages = [
    {
      service: "text-to-speech",
      title: "Text to Speech",
    },
    {
      service: "image-generation",
      title: "Image generation",
    },
    {
      service: "text-generation",
      title: "Text generation",
    },
  ];                 

  return pages.map(({ service, title }) => {
    return {
      params: { service },
      props: { title }
    }
  })
}

const { title } = Astro.props;
---

<Layout title={title}>
  <ServicesLayout>
    <main class="flex flex-col text-2xl text-white">
      <header class="flex items-center justify-between bg-black p-4 shadow-md">
        <div class="h-[1px] w-3/4 bg-slate-50"/>
        <h1 class="w-full font-semibold text-2xl text-center">{title}</h1>
        <div class="h-[1px] w-3/4 bg-slate-50"/>
      </header>
      <section class="flex flex-col p-5">
        <span class="">
          
        </span>
        
      </section>
    </main>
  </ServicesLayout>
</Layout>
